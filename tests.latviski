mainīgais  resultText  =  document.querySelector  ( '#result-text' );
  mainīgais  displayValue  =   '';
  mainīgais  firstNumber;
  mainīgais  latestOperator;

  funkcija  add  (a,  b)  {
  mainīgais  x  =  Number  (a)  +  Number  (b);
  displayValue  =  x;
  resultText.textContent  =  displayValue;
  }  
  
  funkcija  subtract  (a,  b)  {
  mainīgais  x  =  Number  (a)  -  Number  (b);
  displayValue  =  x;
  resultText.textContent  =  displayValue;
  }  
  
  funkcija  numClick  (btn)  {
  displayValue  +=  btn.textContent;
  resultText.textContent  =  displayValue;
  }  
  
  mainīgais  isTwice  =  false;
  mainīgais  operatorText  =  document.querySelector  ( '#operatorr' );
  funkcija  operatorClick  (operator)  {
  operatorText.textContent  =  operator.textContent;
  ja  (isTwice){
  resultClick  ();
  latestOperator  =  operator.textContent;
  firstNumber  =  Number  (displayValue);
  displayValue  =   '' ;
  isTwice  =  true;
  return;
  }  
  
  latestOperator  =  operator.textContent;
  firstNumber  =  Number  (displayValue);
  displayValue  =   '' ;
  isTwice  =  true;
  }  
  
  funkcija  resultClick  ()  {
  isTwice  =  false;
  mainīgais  first  =  firstNumber;
  mainīgais  op  =  latestOperator;
  mainīgais  last  =  Number  (displayValue);
  ja  (op  ==   '+' )  add  (first,  last);
  ja  (op  ==   '-' )  subtract  (first,  last);
  ja  (op  ==   '*' )  multiply  (first,  last);
  ja  (op  ==   '/' )  divide  (first,  last);
  }  
  
  funkcija  clearAll  ()  {
  resultText.textContent  =   '' ;
  displayValue  =   '' ;
  firstNumber  =  undefined;
  latestOperator  =  undefined;
  }  